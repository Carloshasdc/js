package estrutura_sequencial;

import java.util.Locale;
import java.util.Scanner;


public class problemas {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		double largura;
		double comprimento;
		double metro;
		double area;
		double preco;
		
		largura = sc.nextDouble();
		comprimento = sc.nextDouble();
		metro = sc.nextDouble();
		area = largura * comprimento;
		preco = area * metro;
		System.out.println("Digite a largura do terreno:" + largura);
		System.out.println("Digite o comprimento do terreno:" + comprimento);
		System.out.println("Digite o valor do metro quadrado:" + metro);
		System.out.println("Area do terreno =" + area);
		System.out.println("Preco do terreno =" + preco);
		
		sc.close();

	}

}
